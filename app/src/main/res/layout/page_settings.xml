                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        app:layout_constraintStart_toEndOf="@id/settings_custom_key1"
                        app:layout_constraintTop_toTopOf="@id/settings_custom_key1"
